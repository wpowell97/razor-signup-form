@page
@model SignupModel
@{
    ViewData["Title"] = "Sign Up";
}

<div class="container-fluid min-vh-100 d-flex flex-column flex-md-row bg-light">
    <div class="bg-danger text-white text-center p-5 d-flex align-items-center justify-content-center flex-column col-md-6">
        <h1 class="display-5 fw-bold">Learn to code by watching others</h1>
        <p class="mt-3">
            See how experienced developers solve problems in real-time. Watching scripted tutorials is great,
            but understanding how developers think is invaluable.
        </p>
    </div>

    <div class="col-md-6 p-5 d-flex flex-column justify-content-center">
        <div class="bg-primary text-white p-3 rounded mb-4 text-center">
            <strong>Try it free 7 days</strong> then $20/mo. thereafter
        </div>

        <form method="post" class="bg-white p-4 rounded shadow-sm">
            <partial name="_FormInputs" />
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-2">Please correct the errors below and try again.</div>
            }
            <button type="submit" class="btn btn-success w-100 text-uppercase mt-3">Claim your free trial</button>
        </form>

        <p class="text-muted mt-3 small text-center">
            By clicking the button, you are agreeing to our <a href="#" class="text-danger">Terms and Services</a>
        </p>
    </div>
</div>
